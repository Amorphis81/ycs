extends template/inside

block variables
	- var title = 'Страница модели'
	- var pageClass = 'single-model-page'

block content
	section.s-breadcrumbs
		.container
			+breadcrumb
	section.s-single-model
		.container
			h2.h2.single__title Модель Aleksa R
			a(href="models.html").single-back
				+icon('arrow-left', 'single-back__arrow')
				.single-back__text В каталог моделей
			.single-container
				.swiper-container.single-photo
					.swiper-wrapper
						+swiper-slide('model-1.png')
						+swiper-slide('model-2.png')
						+swiper-slide('model-3.png')
						+swiper-slide('model-4.png')
				.single-params
					.table
						.table-column
							.table-column-row
								.table-column__cell Рост
								.table-column__cell 170
