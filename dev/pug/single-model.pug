							.table-column-row
								.table-column__cell Размер одежды
								.table-column__cell 40
							// .table-column-row
							.table-column-row
								.table-column__cell Размер обуви
								.table-column__cell 38
							// .table-column-row
						// .table-column
						.table-column
							.table-column-row
								.table-column__cell Грудь
								.table-column__cell 81
							// .table-column-row
							.table-column-row
								.table-column__cell Талия
								.table-column__cell 60
							// .table-column-row
							.table-column-row
								.table-column__cell Бедра
								.table-column__cell 87
							// .table-column-row
						// .table-column
					// table
				// .single-params
				.single-thumbs
					.swiper-buttons
						.single-thumbs__prev.single-thumbs-button
							+icon('arrow-left')
						.single-thumbs__next.single-thumbs-button
							+icon('arrow-right')
					.swiper-container.single-thumbs-container
						.swiper-wrapper
							+swiper-slide('model-1.png')
							+swiper-slide('model-2.png')
							+swiper-slide('model-3.png')
							+swiper-slide('model-4.png')
